{
    //  "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "allowJs": false,
        "jsx": "preserve",
        "module": "ESNext", // 指定生成哪个模块系统代码： "None"， "CommonJS"， "AMD"， "System"， "UMD"， "ES6"或 "ES2015"
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        //    "typeRoots" : ["./typings"],
        //    "types" : [],
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "ESNext"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "view/*": [
                "./src/view/*"
            ],
             "pages/*": [
                "./src/view/pages/*"
            ],
            "router/*": [
                "./src/router/*"
            ],
            "JS/*": [
                "./src/assets/javascript/*"
            ],
            "CSS/*": [
                "./src/assets/css/*"
            ],
            "stories/*": [
                "./src/stories"
            ],
            "IMG/*": [
                "./src/assets/images/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "store/*": [
                "./src/store/*"
            ],
            "HOC/*": [
                "./src/HOC/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}

